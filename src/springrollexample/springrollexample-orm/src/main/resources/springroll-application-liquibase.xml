<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="springroll-test" author="anish">
        <createTable tableName="testanish">
            <column name="id" type="bigint" autoIncrement="false">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="parent_id" type="bigint"/>
            <column name="firstname" type="varchar(50)"/>
            <column name="lastname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="state" type="char(2)"/>
        </createTable>
    </changeSet>
    <changeSet id="springroll-masterdata" author="anish">
        <sql>
            insert into testanish values(1, 0, 'anish', 'joseph', 'ka');
        </sql>
    </changeSet>
    <changeSet id="springroll-masterdata1" author="anish">
        <sql>
            insert into testanish values(2, 0, 'anish', 'joseph', 'ka');
        </sql>
    </changeSet>
</databaseChangeLog>
